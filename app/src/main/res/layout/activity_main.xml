<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.blanchet.meteomap.meteomap.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_choose"
        android:id="@+id/textTitleChoose"
        android:textSize="42px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editChoose"
        android:layout_below="@+id/textTitleChoose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/validate"
        android:id="@+id/buttonChoose"
        android:layout_below="@+id/editChoose"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/editChoose"
        android:layout_alignEnd="@+id/editChoose"
        android:layout_alignLeft="@+id/editChoose"
        android:layout_alignStart="@+id/editChoose" />
</RelativeLayout>
